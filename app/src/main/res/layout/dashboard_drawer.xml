                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="neil@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />


